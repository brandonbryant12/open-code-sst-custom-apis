{
  "name": "open-code-custom-gateways",
  "private": true,
  "description": "Local provider for custom AI gateways (OpenAI & Bedrock) with Open Code",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "example": "tsx examples/basic-usage.ts",
    "validate-env": "tsx scripts/validate-env.ts"
  },
  "dependencies": {
    "@ai-sdk/amazon-bedrock": "*",
    "@ai-sdk/openai": "*",
    "@ai-sdk/provider": "*",
    "ai": "*",
    "valibot": "*"
  },
  "devDependencies": {
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "eslint": "*",
    "jest": "*",
    "prettier": "*",
    "tsx": "*",
    "typescript": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brandonbryant12/open-code-sst-custom-apis"
  }
}